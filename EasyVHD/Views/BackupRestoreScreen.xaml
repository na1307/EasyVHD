<?xml version="1.0" encoding="utf-8"?>
<local:Screen
    x:Class="EasyVhd.Views.BackupRestoreScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyVhd.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button Width="250px" Height="50px" Grid.Row="0" Grid.Column="0" Command="{x:Bind vm.AddInstanceCommand}" CommandParameter="{x:Bind}">새 인스턴스 추가</Button>
        <Button Width="250px" Height="50px" Grid.Row="0" Grid.Column="1" Command="{x:Bind vm.RemoveInstanceCommand}" CommandParameter="{x:Bind}">기존 인스턴스 제거</Button>
        <Button Width="250px" Height="50px" Grid.Row="1" Grid.Column="0" Command="{x:Bind vm.FullBackupCommand}" CommandParameter="{x:Bind}">전체 백업</Button>
        <Button Width="250px" Height="50px" Grid.Row="1" Grid.Column="1" Command="{x:Bind vm.FullRestoreCommand}" CommandParameter="{x:Bind}">전체 복원</Button>
        <Button Width="250px" Height="50px" Grid.Row="2" Grid.Column="0" Command="{x:Bind vm.Asdf1Command}" CommandParameter="{x:Bind}">ㅁㄴㅇㄹ</Button>
        <Button Width="250px" Height="50px" Grid.Row="2" Grid.Column="1" Command="{x:Bind vm.Asdf2Command}" CommandParameter="{x:Bind}">ㅁㄴㅇㄹ</Button>
    </Grid>
</local:Screen>
