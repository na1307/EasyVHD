<?xml version="1.0" encoding="utf-8"?>
<local:Screen
    x:Class="EasyVhd.Views.CreateVhdScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EasyVhd.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1.333*" />
            <RowDefinition Height="3.333*" />
            <RowDefinition Height="1.333*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="6.5*" />
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="24px" VerticalAlignment="Center">VHD 만들기</TextBlock>
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical">
            <TextBlock FontWeight="Bold">VHD 경로</TextBlock>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBox Width="700px" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Text="{x:Bind vm.VhdPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Margin="10,0,0,0" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.VhdPathBrowseCommand}">찾아보기...</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical">
            <TextBlock FontWeight="Bold">VHD 유형</TextBlock>
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Row="0" Grid.Column="0" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" IsChecked="True" Command="{x:Bind vm.ExpandableCommand}">동적 확장</RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="1" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.FixedCommand}">고정 크기</RadioButton>
                <RadioButton Grid.Row="0" Grid.Column="2" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.DifferencingCommand}">차이점 보관</RadioButton>
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" TextWrapping="Wrap">처음에는 작게 생성하고 사용하면서 점점 커지는 방식</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" TextWrapping="Wrap">처음 만들 때부터 최대 크기로 생성하는 방식</TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" Margin="5" TextWrapping="Wrap">원본(부모) VHD로부터 차이점만 기록하는 방식(자식 VHD)</TextBlock>
            </Grid>
            <TextBlock Margin="0,10,0,0" Text="{x:Bind vm.SourceText, Mode=OneWay}" FontWeight="Bold" />
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <TextBox Width="700px" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Text="{x:Bind vm.SourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Margin="10,0,0,0" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.SourcePathBrowseCommand}">찾아보기...</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical">
            <TextBlock FontWeight="Bold">VHD 최대 크기</TextBlock>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <NumberBox Width="700px" IsEnabled="{x:Bind vm.SizeEnabled, Mode=OneWay}" Text="{x:Bind vm.VhdSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox Margin="10,0,0,0" Width="85px" IsEnabled="{x:Bind vm.SizeEnabled, Mode=OneWay}" ItemsSource="{x:Bind vm.SizeUnits}" SelectedItem="{x:Bind vm.SizeUnit, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Vertical">
            <TextBlock FontWeight="Bold">완료 후 작업</TextBlock>
            <StackPanel Orientation="Horizontal">
                <RadioButton IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" IsChecked="True" Command="{x:Bind vm.SelectCommand}">선택</RadioButton>
                <RadioButton IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.AttachCommand}">연결 및 선택</RadioButton>
                <RadioButton IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.NothingCommand}">아무 일도 안함</RadioButton>
            </StackPanel>
        </StackPanel>
        <ProgressRing Grid.Row="5" Grid.Column="2" IsActive="{x:Bind vm.ProgressActive, Mode=OneWay}" />
        <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal">
            <Button Width="100px" Margin="11.5,0,0,0" IsEnabled="{x:Bind vm.ControlsEnabled, Mode=OneWay}" Command="{x:Bind vm.PreviousCommand}">이전</Button>
            <Button Style="{StaticResource AccentButtonStyle}" Width="100px" Margin="11.5,0,0,0" Content="{x:Bind vm.CreateOrCancel, Mode=OneWay}" Command="{x:Bind vm.CreateVhdFileCommand}" CommandParameter="{x:Bind}" />
        </StackPanel>
    </Grid>
</local:Screen>
